{{ 'custom-banner.css' | asset_url | stylesheet_tag }}

{%- capture guide_button -%}
  <a href="{{ section.settings.main_btn_link }}" class="gift-guide__button">
    <span>{{ section.settings.main_btn_text }}</span>
    {% render 'chevron-right', currentColor: 'white' %}
  </a>
{%- endcapture -%}

<div class="gift-guide">
  <div class="gift-guide__desktop">
    <div class="gift-guide__top-image">
      {% if section.settings.image_top_full != blank %}
        {{ section.settings.image_top_full | image_url: width: 2000 | image_tag: loading: 'lazy' }}
      {% else %}
        <div class="gift-guide__top-image-placeholder">Select Top Strip Image</div>
      {% endif %}
    </div>

    <div class="gift-guide__content-wrapper">
      <div class="gift-guide__content">
        <h2 class="gift-guide__heading">{{ section.settings.heading }}</h2>
        <p class="gift-guide__description">{{ section.settings.description }}</p>
        
        {{ guide_button }}
      </div>

      <div class="gift-guide__side-image">
        {% if section.settings.image_bottom_right != blank %}
           {{ section.settings.image_bottom_right | image_url: width: 1200 | image_tag: loading: 'lazy' }}
        {% else %}
          <div class="gift-guide__side-image-placeholder">Select Right Image</div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="gift-guide__mobile">
    <div class="gift-guide__mobile-content">
      <h2 class="gift-guide__mobile-heading">{{ section.settings.heading }}</h2>
      <p class="gift-guide__mobile-description">{{ section.settings.description }}</p>
    </div>

    <div class="gift-guide__mobile-image-wrapper">
       {% if section.settings.image_mobile != blank %}
          {{ section.settings.image_mobile | image_url: width: 800 | image_tag: loading: 'lazy' }}
       {% elsif section.settings.image_bottom_right != blank %}
         {{ section.settings.image_bottom_right | image_url: width: 800 | image_tag: loading: 'lazy' }}
       {% endif %}

       <div class="gift-guide__mobile-button-container">
          {{ guide_button }}
       </div>
    </div>
  </div>

</div>

{% schema %}
{
  "name": "Gift Guide Section",
  "settings": [
    {
      "type": "header",
      "content": "Main Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "main_btn_text",
      "label": "Main button text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "main_btn_link",
      "label": "Main button link"
    },
    {
      "type": "header",
      "content": "Images (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_top_full",
      "label": "Top image (Full width)",
      "info": "Upload the top horizontal image here"
    },
    {
      "type": "image_picker",
      "id": "image_bottom_right",
      "label": "Bottom right image",
      "info": "Upload the bottom right image here"
    },
    {
      "type": "header",
      "content": "Image (Mobile)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "Upload the image for mobile devices"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Section"
    }
  ]
}
{% endschema %}